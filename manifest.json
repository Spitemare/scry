{
    "manifest_version" : 2,
    "name" : "Scry",
    "description" : "Rollover popups for Magic: the Gathering sites",
    "version" : "3.0.1",
    "icons" : {
        "16" : "img/icon-16.png",
        "48" : "img/icon-48.png",
        "128" : "img/icon-128.png"
    },
    "permissions" : [
        "contextMenus",
        "notifications",
        "unlimitedStorage",
        "http://partner.tcgplayer.com/*"
    ],
    "background" : {
        "scripts" : [
            "js/jquery-2.0.3.min.js",
            "js/jquery.indexeddb-1.0.0.min.js",
            "js/utils.js",
            "js/init.js",
            "js/menu.js",
            "js/oracle.js",
            "js/prices.js"
        ],
        "persistent" : false
    },
    "page_action" : {
        "default_icon" : {
            "19" : "img/icon-19.png",
            "38" : "img/icon-38.png"
        },
        "default_title" : "Scry"
    },
    "content_scripts" : [
        {
            "matches" : [
                "http://spitemare.github.io/scry/"
            ],
            "css" : [
                "css/scry.css"
            ],
            "js" : [
                "js/jquery-2.0.3.min.js",
                "js/jquery.transit-0.9.9.min.js",
                "js/scry.js",
                "js/site/scry.js"
            ],
            "run_at" : "document_end"
        },
        {
            "matches" : [
                "http://*.mtgsalvation.com/*"
            ],
            "css" : [
                "css/scry.css"
            ],
            "js" : [
                "js/jquery-2.0.3.min.js",
                "js/jquery.transit-0.9.9.min.js",
                "js/scry.js",
                "js/site/mtgsalvation.js"
            ],
            "run_at" : "document_end"
        },
        {
            "matches" : [
                "http://*.wizards.com/magic/magazine/*",
                "http://*.wizards.com/Magic/Magazine/*"
            ],
            "css" : [
                "css/scry.css"
            ],
            "js" : [
                "js/jquery-2.0.3.min.js",
                "js/jquery.transit-0.9.9.min.js",
                "js/scry.js",
                "js/site/dailymtg.js"
            ],
            "run_at" : "document_end"
        },
        {
            "matches" : [
                "http://*.starcitygames.com/article/*"
            ],
            "css" : [
                "css/scry.css"
            ],
            "js" : [
                "js/jquery-2.0.3.min.js",
                "js/jquery.transit-0.9.9.min.js",
                "js/scry.js",
                "js/site/starcitygames.js"
            ],
            "run_at" : "document_end"
        },
        {
            "matches" : [
                "http://*.gatheringmagic.com/*"
            ],
            "css" : [
                "css/scry.css"
            ],
            "js" : [
                "js/jquery-2.0.3.min.js",
                "js/jquery.transit-0.9.9.min.js",
                "js/scry.js",
                "js/site/gatheringmagic.js"
            ],
            "run_at" : "document_end"
        },
        {
            "matches" : [
                "http://*.channelfireball.com/articles/*"
            ],
            "css" : [
                "css/scry.css"
            ],
            "js" : [
                "js/jquery-2.0.3.min.js",
                "js/jquery.transit-0.9.9.min.js",
                "js/scry.js",
                "js/site/channelfireball.js"
            ],
            "run_at" : "document_end"
        },
        {
            "matches" : [
                "http://*.gatheringmagic.com/*"
            ],
            "css" : [
                "css/scry.css"
            ],
            "js" : [
                "js/jquery-2.0.3.min.js",
                "js/jquery.transit-0.9.9.min.js",
                "js/scry.js",
                "js/site/gatheringmagic.js"
            ],
            "run_at" : "document_end"
        }
    ],
    "web_accessible_resources" : [
        "template.html"
    ]
}
