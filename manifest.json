{
    "manifest_version" : 2,
    "name" : "Scry",
    "description" : "Rollover popups for Magic: the Gathering sites",
    "version" : "3.0",
    "icons" : {
        "16" : "img/icon-16.png",
        "48" : "img/icon-48.png",
        "128" : "img/icon-128.png"
    },
    "permissions" : [
        "notifications",
        "unlimitedStorage"
    ],
    "background" : {
        "scripts" : [
            "js/jquery-2.0.3.min.js",
            "js/jquery.indexeddb-1.0.0.min.js",
            "js/oracle.js"
        ],
        "persistent" : false
    }
}
